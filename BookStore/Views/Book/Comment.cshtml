@model BookStore.DO.Entities.Comment

@using (Html.BeginForm("AddComments","Book",FormMethod.Post))
{
    @Html.HiddenFor(x=>x.Book_ID)
    @Html.HiddenFor(x=>x.User_ID)
    @Html.HiddenFor(x=>x.DataCreate)
    @Html.TextAreaFor(x => x.Context, new {  @class="form-control", rows="4", placeholder="Your comments" });
    <input type="submit" id="AddComment" class="btn btn-default" value="Add"/>
}

