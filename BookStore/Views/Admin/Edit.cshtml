@model BookStore.DO.Entities.Book
@using BookStore.HtmlHelpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4" id="edit">
            <h2>Edit</h2>
            @using (Html.BeginForm())
            {
                @Html.EditorFor(b => b.Book_ID)
                <div class="editor-label">@Html.LabelFor(b => b.Title, new { @class = "single-line" })</div>
                <div class="editor-field">@Html.EditorFor(b => b.Title, new { @class = "single-line" })</div>
                <div id="Authors">
                    <a href="#" class="glyphicon glyphicon-plus" aria-hidden="true" onclick="return AddField('Author')"></a>
                    @Html.EditorFor(b => b.BookAuthors, new { @class = "single-line" })
                </div>
                <div class="editor-label">@Html.LabelFor(b => b.Genres, new { @class = "single-line" })</div>
                <a href="#" class="glyphicon glyphicon-plus" aria-hidden="true" onclick="return AddField('Genre')"></a>
                <div id="Genres">
                    @Html.EditorFor(b => b.Genres, new { @class = "single-line" })
                </div>
                <div class="editor-label">
                    @Ajax.ActionLink("Search Annotation", "FindBookAnnotation", "Admin",
                new { title = @Model.Title, lastName = @Model.Authors.First().Last_Name, firstName = @Model.Authors.First().First_Name, bookId = @Model.Book_ID },
                new AjaxOptions { UpdateTargetId = "search", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" })
                </div>
                <div class="editor-field">@Html.EditorFor(b => b.Annotation, new { @class = "single-line" })</div>
                <div class="editor-label">
                    @Ajax.ActionLink("Search Image", "FindBookImage", "Admin",
                new { title = @Model.Title, lastName = @Model.Authors.First().Last_Name, firstName = @Model.Authors.First().First_Name, bookId = @Model.Book_ID },
                new AjaxOptions { UpdateTargetId = "search", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" })
                </div>
                <div class="editor-field">@Html.EditorFor(b => b.Image_url, new { @class = "single-line" })</div>
                <div class="editor-label">@Html.LabelFor(b => b.Price, new { @class = "single-line" })</div>
                <div class="editor-field">@Html.EditorFor(b => b.Price, new { @class = "single-line", type = "number", step = "any" })</div>
                <div class="editor-label">@Html.LabelFor(b => b.Tages, new { @class = "single-line" })</div>
                <div class="editor-field" id="Tags">
                    <a href="#" id="addField" class="glyphicon glyphicon-plus" aria-hidden="true" onclick="return AddField('Tag')"></a>
                    @Html.EditorFor(t => t.Tages, new { @class = "single-line" })
                </div>
                <input type="submit" class="btn-default btn" value="Сохранить" />
                <button class="btn-default btn" href="@Url.Action("Index","Admin")">Отменить</button>
            }
        </div>
        <div class="col-md-8">
            <span id="search"></span>
            <span id="search1"></span>
        </div>
    </div>
</div>
